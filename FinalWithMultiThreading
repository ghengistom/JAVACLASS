}


public class CheckConditions implements Runnable 
{	//initialize variables
		int WinsBlackJack;
		int LoseBlackJack;
		int TieBlack;
	//start constructor
		CheckConditions()
		{
			int WinsBlackJack = 0;
			int LoseBlackJack = 0;
			int TieBlack = 0;
		}//end constructor
	//method to check for win or lose
		void Check (int TotalComputer, int TotalUser, int WinsBlackJack, int LoseBlackJack, int TieBlack)
		{
			
			
			if (TotalUser>= TotalComputer && TotalUser<21)
			{
				WinsBlackJack++;
				System.out.println("You win!!");
			}
			else if (TotalComputer>21 && TotalUser<21)
			{
				WinsBlackJack++;
				System.out.println("You win!");
		
			}
			else if (TotalComputer >21 && TotalUser > 21)
			{
				TieBlack++;
		
			}
			else if (TotalComputer <21 && TotalUser > 21)
			{
				System.out.println("You Lose!!");
				LoseBlackJack++;
		
			}
			else if (TotalComputer > TotalUser && TotalComputer==21)
			{
				System.out.println("You Lose!!");
				LoseBlackJack++;
		
			}
			else if (TotalComputer > TotalUser && TotalComputer<21)
			{
				System.out.println("You Lose!!");
				LoseBlackJack++;
			}
	}//end method check
		
	
	@Override
	public void run() 
	{
		// TODO Auto-generated method stub
		
	}
}


public class Card extends RandomNumber
{
	public int a;
	public int size;
	Card(int a[])
	{
		for (int i= 0 ; i<size; ++i)
		a[size] = a[i];
	}
	void RandomNumber(int a[])
	{
		a[size] = 2 + (int)(Math.random()*11);

	}
}

import java.util.Random;

public class RandomNumber
{
	int RandomNumber()
	{
		int a = 1 + (int)(Math.random()*12);
		return a;
	}

	
}


public class DoublceDice extends Dice 
{
	
		int RandomNumber()
		{
			int a = 1 + (int)(Math.random()*12);
			return a;
		}
		int GetValue()
		{
			DoublceDice NumGen = new DoublceDice();
			return NumGen.RandomNumber();
		}
	
}


public class Dice extends RandomNumber
{
	int RandomNumber()
	{
		int a = 1 + (int)(Math.random()*6);
		return a;
	}
}
